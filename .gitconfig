[commit]
	template = ~/.gitmessage
[core]
	editor = vim
	excludesfile = ~/.gitignore.global
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff]
	colorMoved = zebra
[fetch]
	prune = true
[pull]
	rebase = true
[include]
	path = .gitconfig.local
[init]
	defaultBranch = main
[push]
	default = simple
	autoSetupRemote = true
[pager]
	branch = false
	tag = false
